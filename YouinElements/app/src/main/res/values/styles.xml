<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/YouinActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/YouinActionBar</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- No action bar application theme -->
    <style name="AppThemeNoActionBar." parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Action bar style -->
    <style name="YouinActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:background">@color/yellow_light</item>
        <!-- Support library compatibility -->
        <item name="background">@color/yellow_light</item>
    </style>

</resources>
